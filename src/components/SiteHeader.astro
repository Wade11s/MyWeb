---
import { profile } from "../data/profile";
const links = [
  ["About", "/about"],
  ["Publications", "/publications"],
  ["Blog", "/blog"],
  ["CV", "/cv"],
  ["Contact", "/contact"]
] as const;
---

<header>
  <div class="container nav-wrap">
    <a class="brand" href="/">{profile.name}</a>
    <nav>
      {links.map(([label, href]) => (
        <a href={href}>{label}</a>
      ))}
    </nav>
  </div>
</header>

<style>
  header {
    position: sticky;
    top: 0;
    z-index: 10;
    backdrop-filter: blur(10px);
    background: color-mix(in hsl, white 75%, transparent 25%);
    border-bottom: 1px solid var(--line);
  }

  .nav-wrap {
    min-height: 62px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
  }

  .brand {
    font-family: "Source Serif 4", serif;
    font-size: 1.2rem;
    font-weight: 700;
    color: var(--text);
  }

  nav {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  nav a {
    color: var(--text-muted);
    font-size: 0.95rem;
  }

  nav a:hover {
    color: var(--text);
    text-decoration: none;
  }
</style>
