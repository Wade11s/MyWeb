---
import { profile } from "../data/profile";
const base = import.meta.env.BASE_URL;
const links = [
  ["About", "about/"],
  ["Publications", "publications/"],
  ["Blog", "blog/"],
  ["CV", "cv/"],
  ["Contact", "contact/"]
] as const;
---

<header>
  <div class="container nav-wrap glass-surface">
    <a class="brand" href={base}>{profile.name}</a>
    <nav>
      {links.map(([label, href]) => (
        <a href={`${base}${href}`}>{label}</a>
      ))}
    </nav>
  </div>
</header>

<style>
  header {
    position: sticky;
    top: 0;
    z-index: 10;
    padding-top: 0.55rem;
    transition: padding-top 0.2s ease;
  }

  header.scrolled {
    padding-top: 0.35rem;
  }

  .nav-wrap {
    min-height: 58px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
    border-color: transparent;
    border-radius: 12px;
    transition: border-color 0.22s ease, box-shadow 0.22s ease;
  }

  header.scrolled .nav-wrap {
    border-color: color-mix(in hsl, var(--brand) 24%, var(--line) 76%);
    box-shadow: 0 12px 28px rgba(37, 99, 235, 0.1);
  }

  .brand {
    font-family: "Source Serif 4", serif;
    font-size: 1.2rem;
    font-weight: 700;
    color: var(--text);
  }

  nav {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  nav a {
    color: var(--text-muted);
    font-size: 0.95rem;
    transition: color 0.16s ease;
  }

  nav a:hover {
    color: var(--brand-strong);
    text-decoration: none;
  }

  @media (max-width: 700px) {
    .nav-wrap {
      min-height: 54px;
    }
  }
</style>

<script>
  const header = document.querySelector("header");
  const onScroll = () => {
    if (!header) return;
    header.classList.toggle("scrolled", window.scrollY > 10);
  };
  onScroll();
  window.addEventListener("scroll", onScroll, { passive: true });
</script>
