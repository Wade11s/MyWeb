---
const { title, authors, venue, year, type, url, code } = Astro.props;
---

<article class="card">
  <p class="meta">
    <span class="pill">{type}</span>
    <strong class="year">{year}</strong>
  </p>
  <h3>{title}</h3>
  <p>{authors.join(", ")}</p>
  <p class="venue">{venue}</p>
  <p class="links">
    {url && <a href={url} target="_blank" rel="noreferrer">Paper</a>}
    {code && <a href={code} target="_blank" rel="noreferrer">Code</a>}
  </p>
</article>

<style>
  .meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 0.8rem;
    margin-bottom: 0.6rem;
    color: var(--text-muted);
  }

  .year {
    margin-left: auto;
    font-variant-numeric: tabular-nums;
  }

  h3 {
    margin-bottom: 0.5rem;
  }

  .venue {
    color: var(--text-muted);
    margin-bottom: 0.7rem;
  }

  .links {
    display: flex;
    gap: 0.9rem;
    margin: 0;
  }
</style>
