---
import { getCollection } from "astro:content";
import Layout from "../layouts/Layout.astro";
import { profile } from "../data/profile";
import PaperCard from "../components/PaperCard.astro";
import PostCard from "../components/react/PostCard";

const base = import.meta.env.BASE_URL;
const publications = (await getCollection("publications"))
  .sort((a, b) => b.data.year - a.data.year)
  .slice(0, 2);

const posts = (await getCollection("blog", ({ data }) => !data.draft))
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, 2);

const photoSrc = profile.photoPath
  ? /^(https?:)?\/\//.test(profile.photoPath) || profile.photoPath.startsWith("data:")
    ? profile.photoPath
    : `${base}${profile.photoPath.replace(/^\/+/, "")}`
  : "";
---

<Layout>
  <main class="container">
    <section class="section hero">
      <div class="hero-grid">
        <div class="hero-copy">
          <p class="pill">{profile.affiliation}</p>
          <h1>{profile.name}</h1>
          <p class="lead">{profile.bio}</p>
          <p class="actions">
            <a class="button button-primary" href={`${base}publications/`}>View Publications</a>
            <a class="button button-secondary" href={`${base}blog/`}>Read Notes</a>
          </p>
        </div>
        <aside class="photo-card card">
          {photoSrc ? (
            <img src={photoSrc} alt={`${profile.name} portrait`} loading="lazy" />
          ) : (
            <div class="photo-placeholder">
              <span>Profile Photo</span>
            </div>
          )}
        </aside>
      </div>
    </section>

    <section class="section">
      <h2>Research Interests</h2>
      <ul class="interest-list">
        {profile.researchInterests.map((item) => (
          <li><span class="pill">{item}</span></li>
        ))}
      </ul>
    </section>

    <section class="section">
      <h2>Selected Publications</h2>
      <div class="grid cards">
        {publications.map((paper) => (
          <div class="span-6">
            <PaperCard {...paper.data} />
          </div>
        ))}
      </div>
    </section>

    <section class="section">
      <h2>Latest Notes</h2>
      <div class="grid cards">
        {posts.map((post) => (
          <div class="span-6">
            <PostCard
              href={`${base}blog/${post.id.replace(/\.md$/, "")}/`}
              title={post.data.title}
              summary={post.data.summary}
              date={post.data.date.toLocaleDateString("en-US", {
                year: "numeric",
                month: "short",
                day: "numeric"
              })}
              tags={post.data.tags}
            />
          </div>
        ))}
      </div>
    </section>
  </main>
</Layout>

<style>
  .hero {
    padding-top: 3.2rem;
    position: relative;
    overflow: hidden;
  }

  .hero-grid {
    display: grid;
    grid-template-columns: minmax(0, 1fr) 280px;
    gap: 1.3rem;
    align-items: start;
  }

  .hero-copy {
    min-width: 0;
  }

  .hero::before {
    content: "";
    position: absolute;
    inset: -12% auto auto -14%;
    width: 460px;
    height: 320px;
    pointer-events: none;
    background: radial-gradient(circle at center, rgba(96, 165, 250, 0.3) 0%, rgba(96, 165, 250, 0.12) 35%, transparent 72%);
    filter: blur(8px);
    z-index: -1;
  }

  .lead {
    font-size: 1.1rem;
    max-width: 70ch;
    color: var(--text-muted);
  }

  .actions {
    display: flex;
    gap: 1rem;
    margin-top: 1rem;
    flex-wrap: wrap;
  }

  .actions a {
    text-decoration: none;
  }

  .interest-list {
    margin: 0;
    padding-left: 1.3rem;
    display: grid;
    gap: 0.55rem;
  }

  .interest-list li {
    color: var(--text-muted);
  }

  .interest-list li::marker {
    color: var(--brand-strong);
  }

  .photo-card {
    min-height: 320px;
    padding: 0.6rem;
  }

  .photo-card img {
    width: 100%;
    height: 100%;
    min-height: 304px;
    object-fit: cover;
    border-radius: 10px;
    display: block;
  }

  .photo-placeholder {
    min-height: 304px;
    border-radius: 10px;
    display: grid;
    place-items: center;
    font-weight: 600;
    letter-spacing: 0.01em;
    color: #1e3a8a;
    border: 1px dashed color-mix(in hsl, var(--brand) 42%, white 58%);
    background:
      radial-gradient(circle at 78% 18%, rgba(96, 165, 250, 0.42), transparent 44%),
      linear-gradient(145deg, rgba(255, 255, 255, 0.8), rgba(231, 240, 255, 0.82));
  }

  .cards {
    align-items: stretch;
  }

  .span-6 {
    grid-column: span 6;
  }

  @media (max-width: 900px) {
    .hero-grid {
      grid-template-columns: 1fr;
    }

    .span-6 {
      grid-column: span 12;
    }

    .hero::before {
      width: 300px;
      height: 240px;
    }

    .photo-card {
      min-height: 240px;
    }

    .photo-card img,
    .photo-placeholder {
      min-height: 224px;
    }
  }
</style>
